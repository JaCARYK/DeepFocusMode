{
  "manifest_version": 3,
  "name": "Deep Focus Mode",
  "version": "1.0.0",
  "description": "Intelligent distraction blocker that helps you stay focused while coding",
  "author": "Your Name",
  
  "permissions": [
    "webNavigation",
    "tabs",
    "storage",
    "alarms",
    "notifications"
  ],
  
  "host_permissions": [
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*"
  ],
  
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  
  "options_page": "src/options/options.html",
  
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["styles/overlay.css", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}